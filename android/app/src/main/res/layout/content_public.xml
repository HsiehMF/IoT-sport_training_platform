<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="com.example.administrator.myconnet.Function.Public.Public"
    android:background="#00cc99"
    android:gravity="center_vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="新增訓練計畫"
        android:id="@+id/bt_CreateNewPlan"
        android:onClick="createNewPlan"
        android:drawableRight="@drawable/right_arrow"
        android:textSize="24dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="套用訓練計畫"
        android:id="@+id/bt_ApplyTrainPlan"
        android:onClick="applyCourse"
        android:nestedScrollingEnabled="true"
        android:drawableRight="@drawable/right_arrow"
        android:textSize="24dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="查詢訓練計畫"
        android:id="@+id/bt_QueryTrainPlan"
        android:drawableRight="@drawable/right_arrow"
        android:onClick="queryTrainPlan"
        android:textSize="24dp" />

</LinearLayout>
