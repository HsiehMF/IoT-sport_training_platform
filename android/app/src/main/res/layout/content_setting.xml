<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.administrator.myconnet.Setting"
    android:orientation="vertical"
    tools:showIn="@layout/activity_setting">

    <TextView
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:text="左腳感應器"
        android:id="@+id/Left_sensor"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/Left_sensor_txt" />

    <TextView
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="空"
        android:id="@+id/Left_sensor_txt"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_above="@+id/Right_sensor"
        android:layout_alignEnd="@+id/Right_sensor"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:text="右腳感應器"
        android:id="@+id/Right_sensor"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_above="@+id/Right_sensor_txt"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/Right_sensor_txt" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="空"
        android:id="@+id/Right_sensor_txt"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_above="@+id/Heart_sensor"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/Heart_sensor" />

    <TextView
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:text="心跳感應器"
        android:id="@+id/Heart_sensor"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_above="@+id/Heart_sensor_txt"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/Heart_sensor_txt" />

    <TextView
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:text="空"
        android:id="@+id/Heart_sensor_txt"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_above="@+id/textView19"
        android:layout_alignEnd="@+id/L_S"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="左腳感應器設定"
        android:id="@+id/textView19"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:layout_above="@+id/L_S"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/Heart_sensor_txt" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/L_S"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textView18" />

    <TextView
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:text="右腳感應器設定"
        android:id="@+id/textView18"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_above="@+id/R_S"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/R_S" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/R_S"
        android:layout_above="@+id/textView17"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:text="心跳感應器設定"
        android:id="@+id/textView17"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_above="@+id/H_S"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/H_S"
        android:layout_above="@+id/s"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="設定"
        android:textSize="25dp"
        android:id="@+id/s"
        android:onClick="Set_submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</LinearLayout>
