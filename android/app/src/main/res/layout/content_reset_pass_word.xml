<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#74a5d3"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_reset_pass_word"
    tools:context="com.example.administrator.myconnet.ResetPassWord"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="請選用安全強度高的密碼。"
        android:id="@+id/textView48"
        android:layout_gravity="center_horizontal"
        android:textSize="17dp"
        android:textColor="#333" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="#D7E4BD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#AFC87A">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="請輸入舊密碼: "
                android:id="@+id/textView49"
                android:textColor="#000000"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/et_old_pwd"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_edittext_focused"
                android:paddingStart="10dp"
                android:hint="輸入舊密碼"
                android:inputType="textPassword"
                android:textIsSelectable="false"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:background="#D7E4BD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#AFC87A">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="請輸入新密碼: "
                android:id="@+id/textView50"
                android:textColor="#000000"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/et_new_pwd"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_edittext_focused"
                android:paddingStart="10dp"
                android:hint="新密碼"
                android:inputType="textPassword"
                android:textSize="17dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/et_new_check_pwd"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_edittext_focused"
                android:paddingStart="10dp"
                android:hint="確認新密碼"
                android:inputType="textPassword"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:id="@+id/button17"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="變更密碼"
            android:id="@+id/button18"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:onClick="resetDone" />
    </LinearLayout>

</LinearLayout>
