<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.myconnet.Function.Invite.Invite_click">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout3">

        <ImageView
            android:layout_width="280dp"
            android:layout_height="250dp"
            android:id="@+id/imagePhoto"
            android:src="@drawable/bao"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="謝明峰"
            android:id="@+id/tv_invite_click_name"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#4169E1" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="目前就讀高雄大學，系所為運動競技學系，專長項目為游泳"
            android:id="@+id/tv_invite_click_info"
            android:layout_below="@+id/linearLayout3"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout4">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="確認申請"
            android:id="@+id/bt_invite_click_apply"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#e85959"
            android:clickable="false"
            android:alpha="0.95" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退件"
            android:id="@+id/bt_invite_click_cancel"
            android:layout_alignBottom="@+id/bt_invite_click_cancel"
            android:layout_alignEnd="@+id/linearLayout3"
            android:layout_marginLeft="10dp"
            android:background="#9696ef"
            android:alpha="0.95" />
    </LinearLayout>

</RelativeLayout>
